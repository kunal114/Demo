from selenium import webdriver
import json
import os

def load_cookies_from_file(driver, cookie_file):
    with open(cookie_file, 'r') as file:
        cookies = json.load(file)
        for cookie in cookies:
            # Some cookies might have an expiry key that needs to be an int
            if 'expiry' in cookie:
                cookie['expiry'] = int(cookie['expiry'])
            driver.add_cookie(cookie)

# Chrome cookie file location (for manual export from Chrome DevTools)
# You need to export cookies from Chrome DevTools first
cookie_file = "cookies.json"  

# Create driver and navigate to site
driver = webdriver.Chrome()
driver.get("https://example.com")  # Must be on the site's domain before adding cookies

# Load cookies
load_cookies_from_file(driver, cookie_file)

# Refresh page to apply cookies
driver.refresh()
