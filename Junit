import org.junit.jupiter.api.Test;
import org.junit.jupiter.api.extension.ExtendWith;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;
import org.springframework.context.annotation.Import;
import org.springframework.test.context.junit.jupiter.SpringExtension;

import javax.sql.DataSource;
import java.util.Properties;

import static org.junit.jupiter.api.Assertions.assertEquals;
import static org.junit.jupiter.api.Assertions.assertNotNull;

@ExtendWith(SpringExtension.class)
@Import(AnsdsAurorallySqlConfigurationLocal.class)
public class AnsdsAurorallySqlConfigurationLocalTest {

    @Autowired
    private DataSource dataSource;

    @Test
    public void testDataSourceWithIAMAuth() {
        Properties props = dataSource.getConnectionProperties();
        assertNotNull(props);
        assertEquals("true", props.getProperty("PROP_AWS_IAM"));
    }

    @Test
    public void testDataSourceWithPasswordAuth() {
        Properties props = dataSource.getConnectionProperties();
        assertNotNull(props);
        assertEquals("false", props.getProperty("PROP_AWS_IAM"));
        assertNotNull(props.getProperty("password"));
    }

    @Configuration
    static class TestConfig {
        @Bean
        public String dbAuthToken() {
            // Return "na" for IAM auth test, or a valid password for password auth test
            return "na";
        }
    }
}
