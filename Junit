import os
import shutil
from pathlib import Path

def copy_specific_file(filename):
    # Get the path to the Downloads folder
    downloads_path = str(Path.home() / "Downloads")
    
    # Get the current directory
    current_dir = os.getcwd()
    
    # Construct the full path of the source file
    source_path = os.path.join(downloads_path, filename)
    
    # Construct the destination path in the current directory
    dest_path = os.path.join(current_dir, filename)
    
    # Check if the file exists in the Downloads folder
    if os.path.exists(source_path):
        # Copy the file
        shutil.copy2(source_path, dest_path)
        print(f"File '{filename}' has been copied from Downloads to the current directory.")
    else:
        print(f"Error: File '{filename}' not found in the Downloads folder.")

if __name__ == "__main__":
    # Specify the filename you want to copy
    specific_file = "example.txt"  # Replace with the actual filename you're looking for
    copy_specific_file(specific_file)
